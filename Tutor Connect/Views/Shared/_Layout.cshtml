<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tutor Connect</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-free-5.13.1-web/css/all.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>

    <div class="navbar">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>

            @if (Session["isAdmin"] != null)
            {
                <li>@Html.ActionLink("Add Module", "AddModule", "Admin")</li>
                <li>@Html.ActionLink("Add Department", "AddDepartment", "Admin")</li>
                <li>@Html.ActionLink("Applicants", "ListTutors", "Admin")</li>
            }
            else
            {
                <li>@Html.ActionLink("Tutors", "Index", "Tutor")</li>
                <li>@Html.ActionLink("Apply", "Apply", "User")</li>
            }



            @if (Session["logged"] != null)
            {
                if(Session["isAdmin"] == null)
                {
                     <li>@Html.ActionLink("Profile", "Profile", "User")</li>
                }
                
                <li>@Html.ActionLink("Logout", "Logout", "User")</li>
            }
            else
            {
                <li>@Html.ActionLink("Register", "Register", "Student")</li>
                <li>@Html.ActionLink("Login", "Login", "User")</li>
            }




        </ul>


    </div>

    <div class="container body-content">
        @RenderBody()
        <footer class="footer bg-dark">
            <div class="social">
                <a href="#"><i class="fab fa-facebook fa-2x"></i></a>
                <a href="#"><i class="fab fa-twitter fa-2x"></i></a>
                <a href="#"><i class="fab fa-instagram fa-2x"></i></a>
                <a href="#"><i class="fab fa-linkedin fa-2x"></i></a>
            </div>
            <hr />
            <p>Copyright &copy; 2021 - Tutor Connect</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>