@model Tutor_Connect.Models.Module


@{
    ViewBag.Title = "AddModule";
    string str = (string)ViewData["module"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="heading">ADD MODULE</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="registration-form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.moduleCode, htmlAttributes: new { @class = "control-label col-md-2" })*@

            @Html.EditorFor(model => model.moduleCode, new { htmlAttributes = new { @class = "form-control", placeholder = "module code" } })
            @Html.ValidationMessageFor(model => model.moduleCode, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.moduleName, htmlAttributes: new { @class = "control-label col-md-2" })*@

            @Html.EditorFor(model => model.moduleName, new { htmlAttributes = new { @class = "form-control", placeholder = "module name" } })
            @Html.ValidationMessageFor(model => model.moduleName, "", new { @class = "text-danger" })

        </div>
        <p style="color:red">
            @str

        </p>

        <div class="form-group">
            @*@Html.LabelFor(model => model.moduleCode, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.DropDownListFor(model => model.depId, ViewBag.SelectSession as MultiSelectList, "--select departmentId--", new { @class = "form-control" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.moduleCode, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.depId, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn-register" style="width: 150px; " />
                <span class="btn-cancel" style="width: 150px; text-align: center; font-weight: 700;color: white;">

                    @Html.ActionLink("Cancel", "Index", "", new
               {
                   style = "text-decoration:none; color:white",
                   @class = "btn-cancel"
               })
                </span>

            </div>
        </div>
    </div>
}


