@model Tutor_Connect.Models.Department
@{
    ViewBag.Title = "AddDepartment";
    string str = (string)ViewData["deptment"];

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="heading">ADD DEPARTMENT</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="registration-form">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.deptId, htmlAttributes: new { @class = "control-label col-md-2" })*@

            @Html.EditorFor(model => model.depId, new { htmlAttributes = new { @class = "form-control", placeholder = "department id" } })
            @Html.ValidationMessageFor(model => model.depId, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.deptName, htmlAttributes: new { @class = "control-label col-md-2" })*@

            @Html.EditorFor(model => model.deptName, new { htmlAttributes = new { @class = "form-control", placeholder = "department name" } })
            @Html.ValidationMessageFor(model => model.deptName, "", new { @class = "text-danger" })

        </div>
        <p style="color:red">
            @str

        </p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn-register" style="width: 150px; " />
                <span class="btn-cancel" style="width: 150px; text-align: center; font-weight: 700;color: white;">

                    @Html.ActionLink("Cancel", "Index", "", new
               {
                   style = "text-decoration:none; color:white",
                   @class = "btn-cancel"
               })
                </span>

            </div>
        </div>
    </div>
}
