@model Tutor_Connect.Models.Review

@{
    ViewBag.Title = "makeReviewTutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="heading">REVIEW TUTOR</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="registration-form" style="margin-left:600px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @*@Html.LabelFor(model => model.moduleCode, htmlAttributes: new { @class = "control-label col-md-2" })*@

            @Html.TextAreaFor(model => model.review1, new { @class = "form-control", placeholder = "Text here..." })
            @Html.ValidationMessageFor(model => model.review1, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            <input type="submit" value="Post Review" class="btn-register" />
        </div>
        <div class="form-group">
            <input type="submit" value="Cancel" class="btn-cancel" />
        </div>
    </div>
}

